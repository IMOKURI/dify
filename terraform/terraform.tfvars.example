project_id  = "your-gcp-project-id"
region      = "asia-northeast1"
zone        = "asia-northeast1-a"
environment = "production"

# Database
db_tier              = "db-custom-2-4096"
db_availability_type = "REGIONAL"
db_password          = "CHANGE_ME_STRONG_PASSWORD"

# Redis
redis_memory_size_gb = 1
redis_tier           = "BASIC" # Use "STANDARD_HA" for high availability

# GKE
gke_node_count    = 3
gke_machine_type  = "e2-standard-4"
gke_disk_size_gb  = 100
gke_min_node_count = 1
gke_max_node_count = 10

# Storage
storage_bucket_location = "ASIA"
storage_class           = "STANDARD"

# Network
network_cidr = "10.0.0.0/16"
pod_cidr     = "10.1.0.0/16"
service_cidr = "10.2.0.0/16"

# Domain (optional)
domain_name = ""

# Secrets (CHANGE THESE!)
secret_key       = "CHANGE_ME_STRONG_SECRET_KEY"
sandbox_api_key  = "CHANGE_ME_SANDBOX_API_KEY"
weaviate_api_key = "CHANGE_ME_WEAVIATE_API_KEY"
